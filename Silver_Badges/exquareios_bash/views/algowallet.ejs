<%- include("./partials/header"); %>

<div class="container mt-4 mb-5">
  <h1 class="text-center">
    <span style="display: block"> Commence Voting </span>
    <span style="display: block; font-size: 1rem" class="mt-2">
      Select either of the available two options
    </span>
  </h1>
</div>

<div class="vote mb-4">
  <label class="vote--section">
    Zero
    <input type="radio" name="input" value="zero" id="zero" />
    <span class="checkmark"></span>
  </label>

  <label class="vote--section"
    >One
    <input type="radio" name="input" id="one" value="one" />
    <span class="checkmark"></span>
  </label>
  <br />
</div>

<span class="d-flex justify-content-center" style="display: block">
  <button class="btn btn-primary btn-lg" id="drop" onclick="dropDownMenu()">
    Submit
  </button>
  <span style="display: block" class="form-group d-none" id="show">
    <label for="wallet-address">Enter Your Wallet Address: </label><br />
    <input
      class="inputt"
      type="text"
      id="wallet-address"
      autofocus
      name="from"
      placeholder="Input your wallet address"
    />
    <button class="btn btn-primary btn-lg" onclick="myAlgoWalletSign()">
      Vote
    </button>
  </span>
</span>
